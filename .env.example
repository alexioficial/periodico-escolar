# MongoDB
MONGODB_URI=mongodb+srv://usuario:password@cluster-url/tu-base-de-datos
MONGODB_DB=periodico_escolar

# SMTP (para enviar correos)
SMTP_HOST=smtp.tu-proveedor.com
SMTP_PORT=587
SMTP_USER=tu_usuario_smtp
SMTP_PASS=tu_password_smtp
SMTP_FROM="Periódico Escolar <no-reply@tu-dominio.com>"

# Auth.js (requerido para Google OAuth)
AUTH_SECRET=genera_un_string_aleatorio_de_32_caracteres_minimo
AUTH_TRUST_HOST=true

# Google OAuth
GOOGLE_CLIENT_ID=tu_client_id
GOOGLE_CLIENT_SECRET=tu_client_secret
GOOGLE_REDIRECT_URI=https://tu-dominio.com/auth/google/callback

# Vercel Blob Storage (para subida de archivos)
# Obtén este token desde: Vercel Dashboard → Project → Settings → Environment Variables
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxxxxxxxxxxxxxxxx
